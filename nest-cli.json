{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/app-nodejs-codechallenge/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/write/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/write",
  "projects": {
    "write": {
      "type": "application",
      "root": "apps/write",
      "entryFile": "main",
      "sourceRoot": "apps/write/src",
      "compilerOptions": {
        "tsConfigPath": "apps/write/tsconfig.app.json"
      }
    },
    "read": {
      "type": "application",
      "root": "apps/read",
      "entryFile": "main",
      "sourceRoot": "apps/read/src",
      "compilerOptions": {
        "tsConfigPath": "apps/read/tsconfig.app.json"
      }
    },
    "antifraud": {
      "type": "application",
      "root": "apps/antifraud",
      "entryFile": "main",
      "sourceRoot": "apps/antifraud/src",
      "compilerOptions": {
        "tsConfigPath": "apps/antifraud/tsconfig.app.json"
      }
    }
  }
}